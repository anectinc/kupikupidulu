<div class="row">
  <% @articles.each do |article| %>
    <div class="one-post">
      <h5 class="title"><%= link_to article.title, article %></h1>
      <span class="post-time"><span class="fui-time"></span><%= article.created_at %></span>
      <div class="post-image"><%= article.thumbnail_tag %></div>
      <p class="post-description">
        <%= article.description %>
      </p>
      <div class="text-right"><%= link_to 'kasi habis baca >', article %></div>
    </div>
  <% end %>
</div>
