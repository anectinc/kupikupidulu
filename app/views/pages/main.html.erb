<div class="row">
  <% @articles.each do |article| %>
    <div class="one-post">
      <h5 class="title"><%= link_to article.title, article %></h1>
      <span class="post-time"><span class="fui-time"></span><%= article.created_at %></span>
      <div class="post-image"><%= article.thumbnail_tag %></div>
      <p class="post-description">
        <%= article.description %>
      </p>
      <div class="row">
        <div class="col-lg-8"></div>
        <div class="col-lg-4">
          <%= link_to article do %>
            <div class="read-more">
              kasi habis baca<span class="fui-arrow-right"></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @articles %>
</div>
