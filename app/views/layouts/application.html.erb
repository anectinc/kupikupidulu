<!DOCTYPE html>
<html>
  <head>
    <title>KUPI KUPI DULU</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1,user-scalable=no">
    <% if content_for?(:meta_description) || current_page?(root_path) %>
      <meta name="description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : "KUPI KUPI DULU ~media gambar sama video yang siok!~" %>">
    <% end %>
    <% if content_for? :og_title %>
      <%= yield :og_title %>
    <% else %>
      <meta property="og:title" content="KUPI KUPI DULU">
    <% end %>
    <% if content_for? :og_description %>
      <%= yield :og_description %>
    <% else %>
      <meta property="og:description" content="KUPI KUPI DULU ~media gambar sama video yang siok!~">
    <% end %>
    <% if content_for? :og_url %>
      <%= yield :og_url %>
    <% else %>
      <meta property="og:url" content="http://kupikupidulu.com/">
    <% end %>
    <% if content_for? :og_image %>
      <%= yield :og_image %>
    <% else %>
      <meta property="og:image" content="<%= asset_url 'og_image.png' %>">
    <% end %>

    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= favicon_link_tag %>
  </head>
  <body class="<%= controller.controller_name %>">

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <%= link_to 'KUPI KUPI DULU ~media gambar sama video yang siok!~', root_path, class: 'navbar-brand' %>
        </div><!-- col -->
      </div><!-- row -->
    </div><!-- container -->

    <div class="container">
      <div class="row">
        <div class="col-sm-12 flash">
          <% flash.each do |name, msg| %>
            <div class="alert alert-info">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <div class="message">
                <%= msg %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <%= yield :breadcrumb %>
          <%= yield %>
        </div> <!-- col -->
        <div class="col-sm-3">
          <div class="submenu panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">â˜… Palng fames</h3>
            </div>
            <ul class="list-group">
              <% if false %>
              <% @new_videos_for_submenu.each do |video| %>
                <%= link_to video, class: 'list-group-item' do %>
                  <%= image_tag video.thumbnail_url.presence || 'no_image.jpg' %>
                  <span><%= video.title %></span>
                <% end %>
              <% end %>
              <% end %>
            </ul>
          </div>
        </div><!-- col -->
      </div><!-- row -->
    </div><!-- container -->

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <p>
              <%= link_to contact_path do %>
                <span class="glyphicon glyphicon-envelope"></span> support
              <% end %>
            </p>
            <p>Copyright &copy; <%= link_to 'KUPI KUPI DULU', root_path %></p>
          </div><!-- col -->
        </div><!-- row -->
      </div><!-- container -->
    </footer>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
